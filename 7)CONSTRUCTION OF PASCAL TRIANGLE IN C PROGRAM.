#include<stdio.h>
#include<conio.h>
long factorial(int);
main()
{
int i,n,c;
clrscr();
printf("enter the number of rows=\n",n);
scanf("%d",&n);
fori=0;i<n;i++)
{
for(c=0;c<=(n-i-2);c++)
printf("\n");
for(c=0;c<=i;c++)
printf("%ld",factorial(i)/(factorial(c)*factorial(i-c)));
printf("\n");
}
return 0;
}
long factorial(int n)
{
int c;
long result=1;
for(c=1;c<=n;c++)result=result*c;
getch();
return result;
}
